{
  "compilerOptions": {
    "module": "commonjs",
    //"declaration": true,
    "removeComments": true,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es2017",
    "sourceMap": true,
    "outDir": "./dist",
    "baseUrl": "./",
    "incremental": true,
    "esModuleInterop": true,
    "strictNullChecks": true,
    "skipLibCheck": true,
    "allowSyntheticDefaultImports": true
    //"typeRoots": ["node_modules/*", "src/libs"]
  },
  "exclude": ["node_modules", "dist"]
}
